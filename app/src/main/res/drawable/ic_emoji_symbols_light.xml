<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <bitmap android:src="@drawable/ic_emoji_symbols_light_activated" android:tint="@color/forgot_pass_text"/>
    </item>

    <item android:state_pressed="true">
        <bitmap android:src="@drawable/ic_emoji_symbols_light_activated" android:tint="@color/forgot_pass_text"/>
    </item>

    <item android:state_selected="true">
        <bitmap android:src="@drawable/ic_emoji_symbols_light_activated" android:tint="@color/forgot_pass_text"/>
    </item>

    <item>
        <bitmap android:src="@drawable/ic_emoji_symbols_light_activated" android:tint="@color/gradient_avatar_chat"/>
    </item>
</selector>