<?xml version="1.0" encoding="utf-8"?>
<mega.privacy.android.app.components.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:rounded="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="120dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoShadowHeight="4dp"
    android:elevation="16dp">

    <!-- MAIN CONTENT -->

    <FrameLayout
        android:id="@+id/file_list_out_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/main_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center" />
    </FrameLayout>

    <!-- SLIDING LAYOUT -->

    <LinearLayout
        android:id="@+id/file_list_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/file_list_chat_title_layout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/recent_chat_list_relative_layout_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp">

                <mega.privacy.android.app.components.RoundedImageView
                    android:id="@+id/sliding_chat_list_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    rounded:border_color="@color/border_file_properties"
                    rounded:border_width="0dp"
                    rounded:corner_radius="20dp" />

                <TextView
                    android:id="@+id/sliding_chat_list_initial_letter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingBottom="3dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/file_list_chat_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/name_my_account"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/file_list_chat_mail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mail_my_account"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/file_list_chat_name_text"
                    android:textSize="14sp"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="@color/chat_sliding_panel_separator"/>

        <LinearLayout
            android:id="@+id/file_list_info_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/file_list_info_chat_image"
                style="@style/dialogActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:src="@drawable/info_ic"
                android:visibility="visible" />

            <TextView
                android:id="@+id/file_list_info_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="18dp"
                android:text="@string/contact_properties_activity"
                android:textColor="@color/name_my_account"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/file_list_leave_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/file_leave_chat_image"
                style="@style/dialogActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_ignore"
                android:visibility="visible" />

            <TextView
                android:id="@+id/file_list_leave_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="18dp"
                android:text="@string/general_leave"
                android:textColor="@color/name_my_account"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/file_list_mute_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/file_list_mute_chat_image"
                style="@style/dialogActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_volume_off_black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/file_list_mute_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="18dp"
                android:text="@string/general_mute"
                android:textColor="@color/name_my_account"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</mega.privacy.android.app.components.SlidingUpPanelLayout>