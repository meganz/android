<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="344dp"
    android:layout_height="395dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/storage_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/image_storage_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_storage_almost_full"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/text_storage_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/TextAppearance.Mega.Subtitle1.Secondary"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/horizontal_buttons_storage_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/horizontal_storage_status_button_dissmiss"
                    style="?attr/borderlessButtonStyle"
                    android:text="@string/general_dismiss" />

                <Button
                    android:id="@+id/horizontal_storage_status_button_payment"
                    style="?attr/borderlessButtonStyle"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vertical_buttons_storage_status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/vertical_storage_status_button_action"
                    style="?attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/vertical_storage_status_button_achievements"
                    style="?attr/borderlessButtonStyle"
                    android:text="@string/button_bonus_almost_full_warning" />

                <Button
                    android:id="@+id/vertical_storage_status_button_dissmiss"
                    android:text="@string/general_dismiss"
                    style="?attr/borderlessButtonStyle"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>