<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <mega.privacy.android.app.components.TouchImageView
        android:id="@+id/full_screen_image_viewer_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/full_screen_image_viewer_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="fitCenter"
        />

    <ProgressBar
        android:id="@+id/full_screen_image_viewer_progress_bar"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp" />

    <ProgressBar
        android:id="@+id/full_screen_image_viewer_download_progress_bar"
        style="@style/UsedSpaceProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_centerInParent="true"/>

</RelativeLayout>