<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rounded="http://schemas.android.com/apk/res-auto"
    android:id="@+id/file_list_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:background="@drawable/statelist_item_layout"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/file_list_saved_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_cloud_saved_offline"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/container_thumbnail"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"
        android:layout_toEndOf="@+id/file_list_saved_offline"
        android:padding="0dp">

        <ImageView
            android:id="@+id/file_list_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/ic_menu_report_image" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/file_list_three_dots_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/file_list_three_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:src="@drawable/ic_dots_vertical_grey"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/file_list_incoming_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toStartOf="@id/file_list_three_dots_layout"
        android:alpha="0.35"
        android:background="@null"
        android:src="@drawable/ic_permissions_full_access"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/file_list_filename_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@id/file_list_three_dots_layout"
        android:layout_toEndOf="@id/container_thumbnail">

        <TextView
            android:id="@+id/file_list_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/file_list_first_row"
            android:textSize="16sp"
            tools:text="Test title" />

        <ImageView
            android:id="@+id/img_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/file_list_filename"
            android:layout_alignBottom="@id/file_list_filename"
            android:layout_alignTop="@id/file_list_filename"
            android:src="@drawable/ic_favorite"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/img_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/img_favourite"
            android:layout_alignBottom="@id/file_list_filename"
            android:layout_alignTop="@id/file_list_filename"
            android:src="@drawable/ic_circle_label"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/file_list_public_link"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/img_label"
            android:layout_alignBottom="@id/file_list_filename"
            android:layout_alignTop="@id/file_list_filename"
            android:alpha="0.35"
            android:background="@null"
            android:src="@drawable/link_ic"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/file_list_taken_down"
            style="@style/taken_down_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignTop="@id/file_list_filename"
            android:layout_alignBottom="@id/file_list_filename"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@+id/file_list_public_link"
            android:src="@drawable/ic_input_warning"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_list_filename_layout"
        android:layout_marginStart="13dp"
        android:layout_toStartOf="@id/file_list_incoming_permissions"
        android:layout_toEndOf="@id/container_thumbnail">

        <ImageView
            android:id="@+id/file_list_versions_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:alpha="0.76"
            android:background="@null"
            android:src="@drawable/ic_versions_small"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <mega.privacy.android.app.components.twemoji.EmojiTextView
            android:id="@+id/file_list_filesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/file_list_second_row"
            android:maxLines="1"
            android:textSize="14sp"
            rounded:emojiSize="14sp"
            android:layout_toRightOf="@id/file_list_versions_icon"
            tools:text="4.6 MB" />
    </RelativeLayout>

</RelativeLayout>

