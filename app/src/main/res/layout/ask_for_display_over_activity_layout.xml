<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_012_transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="32dp"
        android:background="@drawable/background_ask_for_display_over"
        android:elevation="1dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="23dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/ask_for_display_over_title"
            android:textColor="@color/grey_087_white_087"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_storage_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/il_call_interface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:lineSpacingMultiplier="1.27"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/ask_for_display_over_msg"
            android:textAlignment="textStart"
            android:textColor="@color/grey_087_white_087"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_not_now"
                style="@style/Widget.Mega.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="15dp"
                android:onClick="onClick"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/verify_account_not_now_button"
                android:textColor="@color/teal_300_teal_200" />

            <Button
                android:id="@+id/btn_allow"
                style="@style/Widget.Mega.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:onClick="onClick"
                android:text="@string/general_allow"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/teal_300_teal_200" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
