<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_account_complete_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_020_dark_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/invite_contacts_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?android:attr/colorBackground"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_invite_friends_big" />

            <TextView
                android:id="@+id/title_card_invite_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:textAppearance="@style/TextAppearance.Mega.Body2.Secondary.Variant"
                tools:text="Get 10GB of storage"/>

            <Button
                android:id="@+id/invite_contacts_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/ripple_upgrade"
                android:elevation="@dimen/elevation_upgrade_low"
                android:minHeight="0dp"
                android:paddingLeft="46dp"
                android:paddingRight="46dp"
                android:stateListAnimator="@anim/button_upgrade_elevation"
                android:text="@string/invite_contacts"
                style="?attr/materialButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/how_it_works_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="?android:attr/colorBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/how_works_title"
                style="@style/how_it_works" />

            <TextView
                android:id="@+id/how_works_first_p"
                style="@style/how_works_first_p"
                android:text="@string/first_paragraph_achievement_invite_friends" />

            <TextView
                android:id="@+id/how_works_second_p"
                style="@style/how_works_second_p"
                android:text="@string/second_paragraph_achievement_invite_friends" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>