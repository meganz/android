<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_participant_list_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/add_participant_list_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/add_participant_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_g_add_contact"
            android:gravity="center_horizontal|center_vertical"/>
    </RelativeLayout>

    <mega.privacy.android.app.components.twemoji.EmojiTextView
        android:id="@+id/add_participant_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/add_participant_list_relative_layout"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:textAllCaps="true"
        android:text="@string/add_participants_menu_item"
        android:textColor="@color/accentColor"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:maxLines="1"/>

</RelativeLayout>