<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OfflineFragmentLollipop" >
    <mega.privacy.android.app.components.NewGridRecyclerView
        android:id="@+id/offline_view_browser_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:choiceMode="multipleChoice"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:columnWidth ="172dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/offline_empty_image_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/offline_empty_text_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/offline_empty_image_grid"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/offline_empty_text_grid_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                android:fontFamily="sans-serif"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>