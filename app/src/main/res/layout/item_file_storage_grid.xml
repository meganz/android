<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_storage_grid_item_layout"
    android:layout_width="172dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_margin="3dp"
    android:background="@drawable/background_item_grid"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/file_storage_grid_thumbnail_layout"
        android:layout_width="match_parent"
        android:background="@color/new_background_fragment"
        android:layout_height="172dp">

        <ImageView
            android:id="@+id/file_storage_grid_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@color/green_free_account"/>
    </RelativeLayout>

    <View
        android:id="@+id/file_grid_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/file_grid_thumbnail_layout"
        android:background="@color/new_background_fragment"/>

</RelativeLayout>
