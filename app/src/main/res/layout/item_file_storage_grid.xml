<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/file_storage_grid_item_layout">

    <RelativeLayout
        android:id="@+id/file_storage_grid_thumbnail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/file_storage_grid_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true" />
        <ImageView
            android:id="@+id/thumbnail_selected_stroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/file_storage_image_selected"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/thumbnail_selected_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/media_select_ic"/>

    </RelativeLayout>

</RelativeLayout>
