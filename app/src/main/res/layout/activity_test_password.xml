<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/test_pwd_title"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/login_title"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/test_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="22dp"
                android:layout_gravity="left"
                android:hint="@string/hint_set_password_protection_dialog"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                android:theme="@style/ColorControlStyle" />

            <ImageView
                android:id="@+id/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/test_password_edittext"
                android:layout_alignBottom="@+id/test_password_edittext"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_b_shared_read"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="26dp"
            android:id="@+id/test_password_text_error"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/test_password_text_error_icon"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/test_password_text_error_text"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/login_password_text_error_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <Button
            android:id="@+id/test_password_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/hint_confirm_password_protection_dialog"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/test_password_backup_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/action_export_master_key"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/test_password_dismiss_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/general_dismiss"
            android:textSize="14sp"/>

    </LinearLayout>

</ScrollView>