				</RelativeLayout>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:layout_marginLeft="128dp"
				android:layout_marginRight="8dp"
				android:layout_marginTop="16dp">
				<TextView
					android:id="@+id/upgrade_account_comment"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/mail_my_account"
					android:gravity="left"
					android:textSize="11sp"/>
			</RelativeLayout>
		</LinearLayout>


	</ScrollView>

	<RelativeLayout
		android:id="@+id/semitransparent_layer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/status_bar_login"
		android:visibility="gone"/>

	<include
		android:id="@+id/available_payment_methods_prolite"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="8dp"
		android:visibility="gone"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/title_my_account_type"
		layout="@layout/available_payment_methods" />

