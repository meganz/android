<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/dialog_remember_pwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_pwd_dialog_title"
            android:textSize="20sp"
            android:textColor="@color/copyright_text"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/dialog_remember_pwd_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ic_key"
            android:layout_marginLeft="119dp"/>

        <TextView
            android:id="@+id/dialog_remember_pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/grey_achievements_invite_friends"
            android:text="@string/remember_pwd_dialog_text"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/mail_my_account"
                android:text="@string/remember_pwd_dialog_do_not_show"/>

            <CheckBox
                android:id="@+id/dialog_remember_pwd_checkbox"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <Button
            android:id="@+id/dialog_remember_pwd_test_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/remember_pwd_dialog_button_test"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/dialog_remember_pwd_backup_recoverykey_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/action_export_master_key"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/dialog_remember_pwd_dismiss_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/general_dismiss"
            android:textSize="14sp"/>

    </LinearLayout>

</ScrollView>