<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:context=".lollipop.twofa.TwoFactorAuthenticationActivity" />

    <ScrollView
        android:id="@+id/scroll_container_2fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/container_2fa_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/camera_uploads_list_view">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_2fa"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_2fa_image">

                <TextView
                    android:id="@+id/title_2fa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/title_2fa"
                    android:textColor="@color/name_my_account"
                    android:textSize="18sp"
                    android:fontFamily="roboto"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/content_2fa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_2fa"
                    android:text="Ivdvsdbvsdbsv your friends and for every successful signup you will reveive 10 GB of additional storage quota plus 20 GB of transfer quota, valid for 12 months.This bonus requires that your friends install app."
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="32dp"
                    android:textSize="16sp"
                    android:fontFamily="roboto"
                    android:textColor="@color/mail_my_account"/>

                <Button
                    android:id="@+id/button_enable_2fa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content_2fa"
                    android:layout_marginBottom="32dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/background_button"
                    android:elevation="8dp"
                    android:textColor="@color/white"
                    android:fontFamily="roboto"
                    android:paddingLeft="16.65dp"
                    android:paddingRight="16.65dp"
                    android:text="@string/button_setup_2fa"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/container_qr_2fa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/explain_qr_seed_2fa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/explain_qr_seed_2fa"
                    android:textColor="@color/name_my_account"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:fontFamily="roboto"
                    android:background="@color/camera_uploads_list_view"/>

                <ImageView
                    android:id="@+id/qr_2fa"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/explain_qr_seed_2fa"/>

                <TextView
                    android:id="@+id/seed_2fa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textIsSelectable="true"
                    android:gravity="center"
                    android:textColor="@color/name_my_account"
                    android:fontFamily="roboto"
                    android:layout_below="@id/qr_2fa"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="22dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_confirm_2fa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_qr_2fa"
                android:visibility="gone">

                <TextView
                    android:id="@+id/explain_confirm_2fa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/explain_confirm_2fa"
                    android:textColor="@color/name_my_account"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:fontFamily="roboto"
                    android:background="@color/camera_uploads_list_view"/>

                <LinearLayout
                    android:id="@+id/six_pin_2fa_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/explain_confirm_2fa"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="44dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pass_first"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pass_second"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pass_third"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:layout_marginRight="38dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pass_fourth"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pass_fifth"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pass_sixth"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_verify_2fa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/six_pin_2fa_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="41dp"
                    android:background="@drawable/background_button"
                    android:elevation="8dp"
                    android:textColor="@color/white"
                    android:text="@string/general_verify"
                    android:visibility="gone"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>