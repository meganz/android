<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.preference.PreferenceCategory
        android:key="ads_settings"
        android:title="@string/settings_cookie_settings_label_ad_settings"
        app:isPreferenceVisible="false"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">
        <androidx.preference.Preference
            android:key="ads_personalization"
            android:title="@string/settings_cookie_settings_label_ads_personalization"
            app:allowDividerAbove="true"
            app:allowDividerBelow="true"
            app:iconSpaceReserved="false" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:key="settings_cookie"
        android:title="@string/settings_about_cookie_settings"
        app:isPreferenceVisible="false"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false" />

    <mega.privacy.android.app.presentation.settings.MegaSwitchPreference
        android:key="settings_cookie_accept"
        android:title="@string/preference_cookies_accept"
        app:allowDividerBelow="true"
        app:iconSpaceReserved="false"
        app:shouldDisableView="false" />

    <Preference
        android:key="settings_cookie_essential"
        android:summary="@string/preference_cookies_essential_summary"
        android:title="@string/preference_cookies_essential_title"
        android:widgetLayout="@layout/preference_widget_always_on"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        app:iconSpaceReserved="false"
        app:shouldDisableView="false" />

    <mega.privacy.android.app.presentation.settings.MegaSwitchPreference
        android:key="settings_cookie_performance_analytics"
        android:summary="@string/preference_cookies_performance_summary"
        android:title="@string/preference_cookies_performance_title"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        app:iconSpaceReserved="false"
        app:shouldDisableView="false" />

    <mega.privacy.android.app.components.TwoButtonsPreference
        android:key="setting_cookie_policies"
        app:allowDividerAbove="true"
        app:allowDividerBelow="false"
        app:iconSpaceReserved="false"
        app:shouldDisableView="false" />
</androidx.preference.PreferenceScreen>
