<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folder_link_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".FolderLinkActivityLollipop" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_folder_link"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:context=".FolderLinkActivityLollipop" />

    <TextView
        android:id="@+id/content_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_folder_link"
        android:background="@color/content_text_folder"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/folder_link_list_empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/folder_link_list_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/folder_link_list_empty_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/standard_margin"
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLeft_new"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/grey_btn_default_holo_light"
            android:text="@string/menu_new_folder"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btnRight_upload"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/btn_default_holo_light_without_corners"
            android:text="@string/general_upload"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/out_space"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/out_space_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_drawer_background"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="@string/warning_out_space"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/out_space_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_default_holo_light_without_corners"
            android:text="@string/my_account_upgrade_pro"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/get_pro_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|fill_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/get_pro_account_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_drawer_background"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="@string/get_pro_account"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/get_pro_account_buttons_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center|fill_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnLeft_cancel"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/grey_btn_default_holo_light"
                android:text="@string/general_cancel"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/btnRight_upgrade"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/btn_default_holo_light_without_corners"
                android:text="@string/my_account_upgrade_pro"
                android:textColor="@color/button_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_folder_link_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/folder_link_button_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/accentColor"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/separator_3"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_above="@id/options_folder_link_layout"
        android:background="@color/separator_grey" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/folder_link_list_view_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/separator_3"
        android:layout_below="@id/content_text"
        android:choiceMode="multipleChoice" />

    <mega.privacy.android.app.components.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="100dp"
        sothree:umanoParalaxOffset="100dp"
        sothree:umanoShadowHeight="4dp" >

        <!-- MAIN CONTENT -->

        <FrameLayout
            android:id="@+id/folder_link_list_out_options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:gravity="center" />
        </FrameLayout>

        <!-- SLIDING LAYOUT -->

        <LinearLayout
            android:id="@+id/folder_link_list_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/folder_link_list_option_download_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/folder_link_list_option_download"
                    style="@style/dialogActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:id="@+id/folder_link_list_option_download_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="@string/general_download"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/folder_link_list_option_properties_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/folder_link_list_option_properties"
                    style="@style/dialogActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/info_ic" />

                <TextView
                    android:id="@+id/folder_link_list_option_properties_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </mega.privacy.android.app.components.SlidingUpPanelLayout>

</RelativeLayout>