<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    tools:context=".LoginActivityLollipop" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" >

            <mega.privacy.android.app.components.LoopViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <LinearLayout 
                android:id="@+id/bar_tour_layout"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="horizontal">
                
                <LinearLayout 
                    android:id="@+id/bar_tour_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tour_bar_grey"
                    android:orientation="horizontal" />
                <LinearLayout 
                    android:id="@+id/bar_tour_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tour_bar_grey"
                    android:orientation="horizontal" />
                <LinearLayout 
                    android:id="@+id/bar_tour_layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tour_bar_grey"
                    android:orientation="horizontal" />
                <LinearLayout 
                    android:id="@+id/bar_tour_layout_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tour_bar_grey"
                    android:orientation="horizontal" />
            </LinearLayout>            
        </LinearLayout>

        <include layout="@layout/delimiter" />

        <LinearLayout
            android:id="@+id/tour_login_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tour_text_1"
               	android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tour_space_title"
                android:textColor="@color/mega_text"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tour_text_2"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tour_space_text"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/delimiterColor" />

        <LinearLayout
            android:id="@+id/options_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/button_login_tour"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:gravity="center"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/button_register_tour"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>