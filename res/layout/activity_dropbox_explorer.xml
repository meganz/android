<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DropboxExplorerActivity" >
    
    <RelativeLayout
        android:id="@+id/dropbox_explorer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin" >

        <LinearLayout
            android:id="@+id/dropbox_explorer_button_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/dropbox_explorer_create_folder"
                style="@style/dialogActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_new_folder"
                android:src="@drawable/ic_create_folder" />
        </LinearLayout>

        <TextView
            android:id="@+id/dropbox_explorer_window_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dropbox_explorer_button_bar"
            android:ellipsize="start"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Large"
            />
    </RelativeLayout>

    <View
        android:id="@+id/dropbox_explorer_divider_top"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/dropbox_explorer_toolbar"
        android:background="@color/mega" />

    <Button
       	android:id="@+id/dropbox_explorer_button"
       	android:layout_gravity="center"
       	android:layout_height="55dp"
       	android:layout_width="fill_parent"
       	android:layout_alignParentBottom="true"
       	android:background="@drawable/btn_default_holo_light_without_corners"
       	android:textColor="@color/button_text">
    </Button>
    
    <!--  
    <Button
        android:id="@+id/dropbox_explorer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center" />-->

    <ListView
        android:id="@+id/dropbox_explorer_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dropbox_explorer_button"
        android:layout_below="@id/dropbox_explorer_divider_top" />

</RelativeLayout>