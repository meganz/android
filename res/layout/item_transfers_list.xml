        android:id="@+id/transfers_list_bar_structure"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:src="@drawable/bar_structure_transfers"
        android:layout_below="@id/transfers_list_filename"
        android:layout_toRightOf="@id/transfers_list_thumbnail" 
        android:paddingLeft="5dp"
        android:paddingBottom="7dp" />
    
    <ImageView
        android:id="@+id/transfers_list_bar_fill"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:src="@drawable/bar_fill_transfers"
        android:layout_below="@id/transfers_list_filename"
        android:layout_toRightOf="@id/transfers_list_thumbnail" 
        android:paddingLeft="7dp"
        android:paddingBottom="7dp" />
 -->
     
    <ProgressBar
	    android:id="@+id/transfers_list_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		style="@style/MEGAProgressBarTransfers"  
		android:layout_margin="5dip" 
		android:layout_below="@id/transfers_list_filename"
        android:layout_toRightOf="@id/transfers_list_thumbnail" />
    
    <ImageButton 
        android:id="@+id/transfers_list_three_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/three_dots_background_white"
		android:background="@null" 
        android:layout_alignTop="@id/transfers_list_filename"
        android:layout_alignParentRight="true"
		android:paddingTop="25dp"
        android:paddingRight="15dp" />
    
    <ImageView
        android:id="@+id/transfers_list_arrow_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_selection"
		android:layout_alignBottom="@id/transfers_list_thumbnail"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp" />
    
    <RelativeLayout
        android:id="@+id/transfers_list_options"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transfers_list_arrow_selection"
        android:padding="0dp"
        android:background="#222222">
        
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <TableRow>
	            <ImageButton
		            android:id="@+id/transfers_list_option_undo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/rubbisbin_list_option_undo"
		            android:paddingLeft="30dp"
		            android:paddingTop="10dp"
		            android:background="@null" 
		            android:layout_gravity="center_vertical"/>
	        
		        <ImageButton
		            android:id="@+id/transfers_list_option_delete_permanently"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/rubbisbin_list_option_delete"
		            android:paddingLeft="30dp"
		            android:paddingTop="10dp"
		            android:background="@null" 
		            android:layout_gravity="center_vertical"/>
	        </TableRow>        
        </TableLayout>
    </RelativeLayout>
    
</RelativeLayout>

